      <!-- Contact section at the bottom -->
      <div class="mt-auto pb-8">
        <div class="px-3">
          <p class="text-sm font-semibold text-gray-700 mb-2">Questions? Say Hello!</p>
          <a href="mailto:hello@trackyourlabs.com" class="text-sm text-gray-600 hover:text-gray-900 hover:underline">
            hello@trackyourlabs.com
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Prevent drawer animation on initial page load */
  .drawer-side {
    transition: none !important;
  }
  
  .drawer-side.transitions-enabled {
    transition: transform 0.3s ease-in-out !important;
  }
</style>

<script>
  // Ensure drawer is closed on page load and enable transitions after initial render
  document.addEventListener('DOMContentLoaded', () => {
    const drawerToggle = document.getElementById('sidebar-drawer') as HTMLInputElement;
    const drawerSide = document.querySelector('.drawer-side');
    
    if (drawerToggle) {
      // Force drawer to be closed
      drawerToggle.checked = false;
    }
    
    // Enable transitions after a small delay to prevent initial animation
    if (drawerSide) {
      setTimeout(() => {
        drawerSide.classList.add('transitions-enabled');
      }, 100);
    }
  });
</script>