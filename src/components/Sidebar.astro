<div class="drawer">
  <input id="sidebar-drawer" type="checkbox" class="drawer-toggle" checked={false} />
  
  <div class="drawer-content flex flex-col">
    <!-- Navbar with hamburger and login -->
    <div class="navbar bg-transparent fixed top-0 z-40 w-full">
      <div class="navbar-start">
        <label for="sidebar-drawer" class="btn btn-square btn-ghost drawer-button">
          <!-- Heroicon: bars-3 -->
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
        </label>
      </div>
      <div class="navbar-end ml-auto pr-4">
        <a href="/login" class="btn btn-neutral btn-sm">Login</a>
      </div>
    </div>
    
    <!-- Page content with padding for fixed navbar -->
    <div class="pt-16">
      <slot />
    </div>
  </div>
  
  <!-- Sidebar drawer -->
  <div class="drawer-side z-50">
    <label for="sidebar-drawer" class="drawer-overlay"></label>
