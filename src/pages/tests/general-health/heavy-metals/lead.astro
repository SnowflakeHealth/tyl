  }

  .fact-value {
    padding: 0.75rem 0;
    font-size: 1rem;
    color: #111827;
  }

  /* Benefits List */
  .benefits-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .benefit-item {
    margin-bottom: 1.25rem;
    display: flex;
    align-items: flex-start;
