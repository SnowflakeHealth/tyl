  }

  .faq-question::-webkit-details-marker {
    display: none;
  }

  .faq-question::after {
    content: '+';
    font-size: 1.25rem;
    color: #6b7280;
  }

  details[open] .faq-question::after {
    content: '−';
  }

  .faq-answer {
    margin-top: 1rem;
    color: #4b5563;
    line-height: 1.6;
  }

  /* CTA Section */
  .cta-section {
    background: #f9fafb;
