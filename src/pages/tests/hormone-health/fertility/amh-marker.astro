---
import ShoppingLayout from '../../../../layouts/ShoppingLayout.astro';
import Footer from '../../../../components/Footer.astro';

export const prerender = false;

const testData = {
  id: "6ad716a1-ca60-4634-b3ec-d17fecc5bf94",
  name: "AMH Marker Test",
  price: 21.00,
  category: "hormone-health",
  subcategory: "fertility",
  questName: "AMH Marker Test",
  description: "Measure your Anti-Müllerian Hormone (AMH) level to estimate ovarian reserve and egg quantity.",
  turnaround: "2–5 business days",
  sampleType: "Blood draw",
  fastingRequired: false,
  fastingDuration: "",
  alsoKnownAs: ["Anti-Müllerian Hormone Test","Ovarian Reserve Test"]
};
---

<ShoppingLayout 
  title={`${testData.name} – Order Online | Track Your Labs`}
  description={`Order the ${testData.name} online for $${testData.price.toFixed(2)}. Measure your Anti-Müllerian Hormone (AMH) level to estimate ovarian reserve and egg quantity.`}
>
  <main class="flex-1">
    <!-- Hero Section -->
    <div class="min-h-screen bg-base-100">
      <div>
        <div class="max-w-2xl mx-auto px-4">
          <!-- Breadcrumb -->
          <nav class="text-sm breadcrumbs py-4">
            <ul>
              <li><a href="/" class="text-gray-600 hover:text-gray-900">Home</a></li>
              <li><a href="/tests" class="text-gray-600 hover:text-gray-900">Tests</a></li>
              <li><a href="/tests#hormone-health" class="text-gray-600 hover:text-gray-900">Hormone Health</a></li>
              <li class="text-gray-900">AMH Marker Test</li>
            </ul>
          </nav>

          <h1 class="text-4xl font-bold mb-4">{testData.name}</h1>
          <p class="text-lg text-gray-600 leading-relaxed mb-8">
            {testData.description}
          </p>
          
          <!-- Price and Add to Cart -->
          <div class="mb-12">
            <div class="flex items-baseline gap-2 mb-6">
              <span class="text-4xl font-bold">${testData.price.toFixed(0)}</span>
            </div>
            
            <button id="add-to-cart" class="btn btn-primary btn-lg px-16">
              Add to Cart
            </button>
          </div>

          <!-- Marketing Copy Section -->
