---
import Layout from '../layouts/Layout.astro';
import Footer from '../components/Footer.astro';

export const prerender = true;
---

<Layout 
  title="Sign Up - Track Your Labs"
  description="Join the waitlist - See what all your health data means in one simple view."
  noSidebar={true}
>
  <div class="min-h-screen flex flex-col">
    <!-- Header with logo -->
    <header class="w-full pt-8 pb-4">
      <div class="max-w-2xl mx-auto">
        <a href="/" class="flex items-center gap-3 hover:opacity-80 transition-opacity">
          <img src="/tyl_logo.svg" alt="Track Your Labs Logo" class="w-10 h-10" />
          <span class="text-2xl font-bold">Track Your Labs</span>
        </a>
      </div>
    </header>

    <!-- Hero Section with Waitlist -->
    <main class="flex-1 flex items-center justify-center">
      <div class="hero">
        <div class="hero-content">
          <div class="max-w-2xl">
            <h1 class="text-5xl font-bold mb-6 text-left">Your Health Data, Connected</h1>
            
            <p class="text-lg text-gray-600 mb-8 leading-relaxed text-left">
              We're building the easiest way to understand all your health data. Labs, wearables, nutrition 
              appsâ€”everything in one place, finally making sense.
            </p>
            
            <p class="text-lg text-gray-600 mb-10 leading-relaxed text-left">
              Join to see what's working for your health.
            </p>
            
            <!-- Waitlist Widget Container -->
            <div class="flex justify-start">
              <div id="getWaitlistContainer" data-waitlist_id="30718" data-widget_type="WIDGET_1"></div>
            </div>
          </div>
        </div>
      </div>
    </main>

    <Footer />
  </div>

  <!-- Waitlist Widget Assets -->
  <link rel="stylesheet" type="text/css" href="https://prod-waitlist-widget.s3.us-east-2.amazonaws.com/getwaitlist.min.css"/>
  <script src="https://prod-waitlist-widget.s3.us-east-2.amazonaws.com/getwaitlist.min.js"></script>

  <style>
    /* Optional: Custom styling for the waitlist widget */
    #getWaitlistContainer {
      max-width: 400px;
      width: 100%;
      margin-left: -16px; /* Compensate for widget's internal padding */
    }
    
    /* Ensure the widget form looks good on mobile */
    @media (max-width: 640px) {
      #getWaitlistContainer {
        max-width: 100%;
        margin-left: -16px;
      }
    }
  </style>
</Layout>